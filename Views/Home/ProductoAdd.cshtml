@model Cajero.Models.Producto;

@{
    ViewData["Title"] = "Ingresar producto";
}

<div class="panel paneñ-success">
    <div class="panel-heading text-center"><h4>Ingresar producto</h4></div>
    <div class="panel-body">
        <form class="p-a-1" asp-action="ProductoAdd" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="codigo">Código:</label>
                <input class="form-control" asp-for="codigo" />
            </div>
            <div class="form-group">
                <label asp-for="producto">Producto:</label>
                <input class="form-control" asp-for="producto" />
            </div>
            <div class="form-group">
                <label asp-for="precio">Precio:</label>
                <input class="form-control" asp-for="precio" />
            </div>
            <div class="form-group">
                <label asp-for="cantidad">Cantidad:</label>
                <input class="form-control" asp-for="cantidad" />
            </div>
            <div class="form-group">
                <label>Descuento</label>
                <select class="form-control" asp-for="descuento">
                    <option value="0">Sin descuento</option>
                    <option value="1">Te</option>
                    <option value="2">Fresa</option>
                    <option value="3">Cafe</option>
                </select>
            </div>
            <div class="text-center">
                <button class="btn btn-primary" type="submit">
                    Guardar
                </button>
                <a class="btn btn-danger" asp-action="Index">Cancelar</a>
            </div>
        </form>
    </div>    
</div>

